package seatReserve;

import java.util.Scanner;

public class Seat {
	
	Scanner sc = new Scanner(System.in);
	
	String[] vipSeat = new String[10];
	String[] sSeat = new String[15];
	String[] rSeat = new String[25];
	
	public Seat() {
		int i = 0;
		while(i < 25) {
			if(i < 10) vipSeat[i] = "----";
			if(i < 15) sSeat[i] = "----";
				rSeat[i] = "----";
				i++;
		}
	}
	
	public void showReserve() {
		System.out.println("VIP>> ");
		for(int i = 0; i < vipSeat.length; i++) {
			System.out.println(vipSeat[i] + " ");
		}
		
		System.out.println();
		
		System.out.println("S>> ");
		for(int i = 0; i<sSeat.length; i++) {
			System.out.println(sSeat[i] + " ");
		}
		
		System.out.println();
		
		System.out.println("R>> ");
		for(int i = 0; i<rSeat.length; i++) {
			System.out.println(rSeat[i] + " ");
		}
		
		System.out.println();
	}
		
	public boolean showOne(int inputseats) {
		switch(inputseats) {
		case 1:
			System.out.println("VIP>> ");
			for(int i = 0; i < vipSeat.length; i++) {
				System.out.println(vipSeat[i] + " ");
			}
			System.out.println();
			return true;
			
		case 2:
			System.out.println("S>> ");
			for(int i = 0; i<sSeat.length; i++) {
				System.out.println(sSeat[i] + " ");
			}			
			System.out.println();
			return true;
		
		case 3: 
			System.out.println("R>> ");
			for(int i = 0; i<rSeat.length; i++) {
				System.out.println(rSeat[i] + " ");
			}			
			System.out.println();
			return true;
			
		default :
			System.out.println("잘못 입력했습니다. 다시 입력해주세요");
				return false;
		}
	}
	
	public void reservation() {
		int inputseat = 0;
		String name = "";
		boolean right;
		
		while(true) {
			System.out.println("좌석구분 VIP<1>, S<2>, R<3> >>");
			inputseat = sc.nextInt();
			
			right = showOne(inputseat);
			
			if(right == false) continue;
			
			System.out.println("이름 >> ");
				name = sc.next();
			System.out.println("번호 >> ");
			int seatnum = sc.nextInt();
			
			try {
				switch(inputseat) {
				case 1:
					vipSeat[seatnum-1] = name;
					break;
				case 2:
					sSeat[seatnum-1] = name;
					break;
				case 3:
					rSeat[seatnum-1] = name;
					break;
				}
			}
			
			catch(ArrayIndexOutOfBoundsException e) {
				System.out.println("없는 좌석번호입니다. 다시 입력해주세요");
					continue;
			}
			System.out.println();
			return;					
		}
	}
	
	
	
	
	
	
	
	

}
