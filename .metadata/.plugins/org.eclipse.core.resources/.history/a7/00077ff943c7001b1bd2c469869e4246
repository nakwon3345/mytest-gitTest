package seatReserve;

import java.util.Scanner;

public class ReserveSystem {
	
	public static void main(String[] args) {
		int menu = 0;
		Scanner scanner = new Scanner(System.in);
		Seat rs = new Seat();
		
			while(true) {
				System.out.println("----공연 예약 시스템----");
				System.out.println();
				System.out.println("공연조회<1>, 예약<2>, 예약 조회<3>, 예약 취소<4>, 끝내기<5>");
				System.out.println("--------");
				System.out.print("어떤 메뉴를 이용하시겠습니까? ");
				
				menu = Integer.parseInt(scanner.nextLine());
				
				switch(menu) {
				case 1:
					switch(menu) {
					
					}
					break;
				case 2:
					rs.reservation();
					break;
				case 3:
					rs.showReserve();
					break;
				case 4:
					rs.delReseve();
					break;
				case 5:
					System.out.println("시스템을 종료합니다.");
					return;
					
					default:
						System.out.println("없는 메뉴입니다. 다시 입력해주세요.");
				}
			}
			

		
	}//

}//
