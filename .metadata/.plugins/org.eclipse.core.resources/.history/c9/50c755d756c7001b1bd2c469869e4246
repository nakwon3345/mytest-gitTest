package com.work.view;

import java.util.Scanner;

import com.work.service.MemberService;
import com.work.service.Seat;

public class Test {
	public static void play() {
		int menu = 0;
		Scanner scanner = new Scanner(System.in);
		MemberService service = new MemberService();
		
		while(true) {
			System.out.println();
			System.out.println("----공연 조회 시스템----");
			System.out.println("뮤지컬 더 리퍼<1>, 옥탑방 고양이<2>, 피카츄의 대모험<3>, 낫아웃<4>, 행복<5>");
			System.out.println("--------");
			System.out.print("어떤 공연을 조회하시겠습니까? ");
			
			menu = Integer.parseInt(scanner.nextLine());
			
			switch(menu) {
			case 1:
				service.getPlay1();
				break;
			case 2:
				service.getPlay2();
				break;
			case 3:
				service.getPlay3();
				break;
			case 4:
				service.getPlay4();
				break;
			case 5:
				service.getPlay5();
				return;
				
				default:
					System.out.println("없는 메뉴입니다. 다시 입력해주세요.");
			
			}
		}
		
		
	}//
	
	
	public static void reserve() {
				
		int menu = 0;
		Scanner scanner = new Scanner(System.in);
		MemberService service = new MemberService();
		Seat rs = new Seat();
		
			while(true) {
				System.out.println("----공연 예약 시스템----");
				System.out.println();
				System.out.println("공연조회<1>, 예약<2>, 예약 조회<3>, 예약 취소<4>, 이전 화면<5>, 끝내기<6>");
				System.out.println("--------");
				System.out.print("어떤 메뉴를 이용하시겠습니까? ");
				
				menu = Integer.parseInt(scanner.nextLine());
				
				switch(menu) {
				case 1:
					play();
					break;
				case 2:
					rs.reservation();
					break;
				case 3:
					rs.showReserve();
					break;
				case 4:
					rs.delReseve();
					break;
				case 5:
					main(null);
					return;
					
				case 6:
					System.out.println("시스템을 종료합니다.");
					return;
					default:
						System.out.println("없는 메뉴입니다. 다시 입력해주세요.");
				}
			}
	}
	
	public static void main(String[] args) {
		int menu = 0;
		Scanner scanner = new Scanner(System.in);
		MemberService memberService = new MemberService();
			
		while(true) {
			System.out.println("----회원 관리 시스템----");
			System.out.println("로그인<1>, 회원가입<2>, 전체 회원 보기<3>, 종료<4>");
			System.out.println("-------------------------------------------");
			System.out.print("어떤 메뉴를 이용하시겠습니까? ");
			
			menu = Integer.parseInt(scanner.nextLine());
			
			switch(menu) {
			case 1:
				memberService.Login();
				if(true) {
					reserve();
				}main(null);
				
				break;
			case 2:
				memberService.MemberJoin();
				break;
			case 3:
				memberService.SelectMember();
				break;
			case 4:
				System.out.println("시스템을 종료합니다.");
				return;
				
				default:
					System.out.println("없는 메뉴입니다. 다시 입력해주세요.");
			}
		}
		
		
		
	}//

}//
