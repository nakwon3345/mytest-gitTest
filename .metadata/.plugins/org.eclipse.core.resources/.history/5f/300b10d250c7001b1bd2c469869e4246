package seatReserve;

import java.util.Scanner;

import com.work.service.MemberService;

public class ReserveSystem {
	
	
	public static void main(String[] args) {
		
		int menu = 0;
		Scanner scanner = new Scanner(System.in);
		MemberService service = new MemberService();
		Seat rs = new Seat();
		
		while(true) {
			System.out.println();
			System.out.println("----공연 조회 시스템----");
			System.out.println("뮤지컬 더 리퍼<1>, 옥탑방 고양이<2>, 피카츄의 대모험<3>, 낫아웃<4>, 행복<5>");
			System.out.println("--------");
			System.out.print("어떤 공연을 조회하시겠습니까? ");
			
			menu = Integer.parseInt(scanner.nextLine());
			
			switch(menu) {
			case 1:
				service.getPlay1();
				break;
			case 2:
				service.getPlay2();
				break;
			case 3:
				service.getPlay3();
				break;
			case 4:
				service.getPlay4();
				break;
			case 5:
				service.getPlay5();
				return;
				
				default:
					System.out.println("없는 메뉴입니다. 다시 입력해주세요.");
			
			}
		}
		
	}
		
		
