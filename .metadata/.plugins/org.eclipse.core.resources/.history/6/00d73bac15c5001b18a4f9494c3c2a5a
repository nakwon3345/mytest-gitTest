package com.work.service;

import java.util.ArrayList;

import com.work.model.InfoData;

public class PlayService extends MemberService{
	
	private ArrayList play = new ArrayList();
	
	/**
	 * 공연 추가
	 * @param infoCode 공연코드
	 * @param infoName 공연이름
	 * @param infoDate 공연날짜
	 * @param infoTime 공연시간
	 * @param infoFemalActor 주연여배우
	 * @param infoMaleActor 주연남배우
	 */
	public void addInfo(String infoCode, String infoName, String infoDate, String infoTime, String infoFemaleActor, String infoMaleActor) {
		InfoData dto = new InfoData(infoCode, infoName, infoDate, infoTime, infoFemaleActor, infoMaleActor);
		
		addInfo(dto);
	}
	
	public ArrayList<InfoData> getConcert() {
		return getPlay();
	}
	
	public int getPlayCount(){
		return getPlay().size();
	}
	

	
	private void addInfo(InfoData dto) {
		// TODO Auto-generated method stub
		
	}



	public int exist(String infoCode) {
		for(int index = 0; index < getPlay().size(); index++) {
			Object obj = getPlay().get(index);
			if(obj instanceof InfoData) {
				InfoData dto = (InfoData)obj;
				if(dto.getInfoCode().equals(infoCode)) {
					return index; 
				}
			
			}
		}	
		return -1;
	}
	
	public InfoData getConcert(String infoCode) {
		int index = exist(infoCode);
		if (index >= 0) {
			return (InfoData)getPlay().get(index);
		}
		return null;
	}

	public void addConcer(InfoData dto) {
		if(exist(dto.getInfoCode()) == -1) {
			getPlay().add(dto);
		}else {
			System.out.println("[오류] 동일 아이디 존재");
		}
	}

	public ArrayList<InfoData> getPlay() {
		return getPlay();
	}

	public void setPlay(ArrayList<?> play) {
		this.play = play;
	}
}
